<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Love Test"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Names"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Here"/>

    <TextView
        android:id="@+id/tv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Days"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Here"/>

    <TextView
        android:id="@+id/tv_Dage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age Difference"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Here"/>


    <TextView
        android:id="@+id/tv_Dheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height Difference"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Here"/>


    <TextView
        android:id="@+id/tv_BT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Type 1"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Here"/>


    <TextView
        android:id="@+id/tv_BT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Type 2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Here"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grade"/>
</LinearLayout>